{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["prettier/@typescript-eslint", "plugin:prettier/recommended"],
  "rules": {
    "no-useless-constructor": "off",
    "no-var": "error",
    "prefer-const": "error",
    "no-shadow": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "env": {
    "jest": true,
    "node": true
  }
}
